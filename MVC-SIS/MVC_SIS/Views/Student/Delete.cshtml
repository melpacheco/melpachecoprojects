@model Exercises.Models.Data.Student
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h3>Delete Course</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.StudentId)
                <p>Are you sure that you wish to delete @Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m => m.LastName)?</p>
                <button class="btn btn-sm btn-danger">Delete Student</button>
                @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
            }
        </div>
    </div>

 </div>

